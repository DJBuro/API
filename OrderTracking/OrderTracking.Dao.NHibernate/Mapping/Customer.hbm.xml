<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping default-lazy="false" xmlns="urn:nhibernate-mapping-2.2">
	<class name="OrderTracking.Dao.Domain.Customer, OrderTracking.Dao" table="tbl_Customer"  batch-size="100">
    
    <cache usage="read-write" />
		
    <id name="Id" type="Int64" unsaved-value="null">
			<column name="id" length="8" sql-type="bigint" not-null="true" unique="true" index="PK_tbl_Customer"/>
			<generator class="native" />
		</id>
    
		<property name="ExternalId" type="String">
			<column name="ExternalId" length="50" sql-type="nvarchar" not-null="true"/>
		</property>
		<property name="Name" type="String">
			<column name="Name" length="50" sql-type="nvarchar" not-null="true"/>
		</property>
		<property name="Credentials" type="String">
			<column name="Credentials" length="20" sql-type="nvarchar" not-null="true"/>
		</property>

    <property name="HouseNumber" type="String">
      <column name="HouseNumber" length="255" sql-type="nvarchar" not-null="false"/>
    </property>
    <property name="BuildingName" type="String">
      <column name="BuildingName" length="255" sql-type="nvarchar" not-null="false"/>
    </property>
    <property name="RoadName" type="String">
      <column name="RoadName" length="255" sql-type="nvarchar" not-null="false"/>
    </property>
    <property name="TownCity" type="String">
      <column name="TownCity" length="255" sql-type="nvarchar" not-null="false"/>
    </property>
    <property name="PostCode" type="String">
      <column name="PostCode" length="255" sql-type="nvarchar" not-null="false"/>
    </property>
    <property name="Country" type="String">
      <column name="Country" length="255" sql-type="nvarchar" not-null="false"/>
    </property>

    <many-to-one name="Coordinates" class="OrderTracking.Dao.Domain.Coordinates, OrderTracking.Dao" fetch="join">
			<column name="Coordinates" length="8" sql-type="bigint" not-null="false"/>
		</many-to-one>
    
		<bag name="CustomerOrders" inverse="true" lazy="true" cascade="all-delete-orphan" fetch="join">
			<key column="CustomerId"/>
			<one-to-many class="OrderTracking.Dao.Domain.CustomerOrder, OrderTracking.Dao"/>
		</bag>
    
	</class>
</hibernate-mapping>



