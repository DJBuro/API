<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping default-lazy="false" xmlns="urn:nhibernate-mapping-2.2">
	<class name="OrderTracking.Dao.Domain.Item, OrderTracking.Dao" table="tbl_Item"  batch-size="100">
        <cache usage="read-write" />
		<id name="Id" type="Int64" unsaved-value="null">
			<column name="id" length="8" sql-type="bigint" not-null="true" unique="true" index="PK_tbl_Item"/>
			<generator class="native" />
		</id>
		<property name="Quantity" type="Int32">
			<column name="Quantity" length="4" sql-type="int" not-null="true"/>
		</property>
		<property name="Name" type="String">
			<column name="Name" length="50" sql-type="nvarchar" not-null="true"/>
		</property>
		<many-to-one name="Order" class="OrderTracking.Dao.Domain.Order, OrderTracking.Dao" fetch="join">
			<column name="OrderId" length="8" sql-type="bigint" not-null="true"/>
		</many-to-one>
	</class>
</hibernate-mapping>



