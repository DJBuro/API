<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping default-lazy="false" xmlns="urn:nhibernate-mapping-2.2">
	<class name="OrderTracking.Dao.Domain.Driver, OrderTracking.Dao" table="tbl_Driver">
		<id name="Id" type="Int64" unsaved-value="null">
			<column name="id" length="8" sql-type="bigint" not-null="true" unique="true" index="PK_tbl_Driver"/>
			<generator class="native" />
		</id>
		<property name="Name" type="String">
			<column name="Name" length="50" sql-type="nvarchar" not-null="true"/>
		</property>
		<property name="ExternalDriverId" type="String">
			<column name="ExternalDriverId" length="50" sql-type="nvarchar" not-null="true"/>
		</property>
		<property name="Vehicle" type="String">
			<column name="Vehicle" length="50" sql-type="nvarchar" not-null="true"/>
		</property>
		<many-to-one name="StoreId" class="OrderTracking.Dao.Domain.Store, OrderTracking.Dao">
			<column name="StoreId" length="8" sql-type="bigint" not-null="true"/>
		</many-to-one>
		<bag name="DriverIdDriverOrderses" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="DriverId"/>
			<one-to-many class="OrderTracking.Dao.Domain.DriverOrder, OrderTracking.Dao"/>
		</bag>
		<bag name="DriverIdTrackers" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="DriverId"/>
			<one-to-many class="OrderTracking.Dao.Domain.Tracker, OrderTracking.Dao"/>
		</bag>
	</class>
</hibernate-mapping>



