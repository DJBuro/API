
<objects xmlns="http://www.springframework.net">

<v:group id="DriverValidator" xmlns:v="http://www.springframework.net/validation">


	<v:required id="NameValidator" test="Name"><v:message id="error.Name.required" providers="NameErrors, ValidationSummary"/></v:required>
	<v:required id="ExternalDriverIdValidator" test="ExternalDriverId"><v:message id="error.ExternalDriverId.required" providers="ExternalDriverIdErrors, ValidationSummary"/></v:required>
	<v:required id="VehicleValidator" test="Vehicle"><v:message id="error.Vehicle.required" providers="VehicleErrors, ValidationSummary"/></v:required>
</v:group>

</objects>




			