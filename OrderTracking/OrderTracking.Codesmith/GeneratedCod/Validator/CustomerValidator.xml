
<objects xmlns="http://www.springframework.net">

<v:group id="CustomerValidator" xmlns:v="http://www.springframework.net/validation">


	<v:required id="ExternalIdValidator" test="ExternalId"><v:message id="error.ExternalId.required" providers="ExternalIdErrors, ValidationSummary"/></v:required>
	<v:required id="NameValidator" test="Name"><v:message id="error.Name.required" providers="NameErrors, ValidationSummary"/></v:required>
	<v:required id="CredentialsValidator" test="Credentials"><v:message id="error.Credentials.required" providers="CredentialsErrors, ValidationSummary"/></v:required>
</v:group>

</objects>




			