<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping default-lazy="false" xmlns="urn:nhibernate-mapping-2.2">
	<class name="Loyalty.Dao.Domain.TblLoyaltyAccount, Loyalty.Dao" table="tbl_LoyaltyAccount">
		<id name="Id" type="Int32" unsaved-value="null">
			<column name="id" length="4" sql-type="int" not-null="true" unique="true" index="PK_tbl_LoyaltyAccount"/>
			<generator class="native" />
		</id>
		<property name="Points" type="Int32">
			<column name="Points" length="4" sql-type="int" not-null="true"/>
		</property>
		<property name="DateTimeCreated" type="DateTime">
			<column name="DateTimeCreated" length="4" sql-type="smalldatetime" not-null="true"/>
		</property>
		<bag name="LoyaltyAccountIdtbl_LoyaltyUsers" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="LoyaltyAccountId"/>
			<one-to-many class="Loyalty.Dao.Domain.TblLoyaltyUser, Loyalty.Dao"/>
		</bag>
		<bag name="LoyaltyAccountIdtbl_LoyaltyCards" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="LoyaltyAccountId"/>
			<one-to-many class="Loyalty.Dao.Domain.TblLoyaltyCard, Loyalty.Dao"/>
		</bag>
		<bag name="LoyaltyAccountIdtbl_AccountAddresses" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="LoyaltyAccountId"/>
			<one-to-many class="Loyalty.Dao.Domain.TblAccountAddress, Loyalty.Dao"/>
		</bag>
		<bag name="LoyaltyAccountIdtbl_CompanyLoyaltyAccounts" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="LoyaltyAccountId"/>
			<one-to-many class="Loyalty.Dao.Domain.TblCompanyLoyaltyAccount, Loyalty.Dao"/>
		</bag>
		<bag name="LoyaltyAccountIdtbl_LoyaltyAccountStatuses" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="LoyaltyAccountId"/>
			<one-to-many class="Loyalty.Dao.Domain.TblLoyaltyAccountStatus, Loyalty.Dao"/>
		</bag>
	</class>
</hibernate-mapping>



