<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping default-lazy="false" xmlns="urn:nhibernate-mapping-2.2">
	<class name="Loyalty.Dao.Domain.Country, Loyalty.Dao" table="tbl_Country">
		<id name="Id" type="Int32" unsaved-value="null">
			<column name="id" length="4" sql-type="int" not-null="true" unique="true" index="PK_tbl_Country"/>
			<generator class="native" />
		</id>
		<property name="Name" type="String">
			<column name="Name" length="50" sql-type="nvarchar" not-null="true"/>
		</property>
		<property name="ISOCode" type="String">
			<column name="ISOCode" length="6" sql-type="nvarchar" not-null="true"/>
		</property>
		<bag name="CountryIdAccountAddresses" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="CountryId"/>
			<one-to-many class="Loyalty.Dao.Domain.AccountAddress, Loyalty.Dao"/>
		</bag>
		<bag name="CountryIdCompanies" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="CountryId"/>
			<one-to-many class="Loyalty.Dao.Domain.Company, Loyalty.Dao"/>
		</bag>
		<bag name="CountryIdSites" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="CountryId"/>
			<one-to-many class="Loyalty.Dao.Domain.Site, Loyalty.Dao"/>
		</bag>
		<bag name="CountryIdCountryCurrencies" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="CountryId"/>
			<one-to-many class="Loyalty.Dao.Domain.CountryCurrency, Loyalty.Dao"/>
		</bag>
	</class>
</hibernate-mapping>



