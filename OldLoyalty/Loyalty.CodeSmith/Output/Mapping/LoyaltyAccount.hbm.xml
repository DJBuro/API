<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping default-lazy="false" xmlns="urn:nhibernate-mapping-2.2">
	<class name="Loyalty.Dao.Domain.LoyaltyAccount, Loyalty.Dao" table="tbl_LoyaltyAccount">
		<id name="Id" type="Int32" unsaved-value="null">
			<column name="id" length="4" sql-type="int" not-null="true" unique="true" index="PK_tbl_LoyaltyAccount"/>
			<generator class="native" />
		</id>
		<property name="Points" type="Int32">
			<column name="Points" length="4" sql-type="int" not-null="true"/>
		</property>
		<property name="DateTimeCreated" type="DateTime">
			<column name="DateTimeCreated" length="4" sql-type="smalldatetime" not-null="true"/>
		</property>
		<many-to-one name="SiteId" class="Loyalty.Dao.Domain.Site, Loyalty.Dao">
			<column name="SiteId" length="4" sql-type="int" not-null="true"/>
		</many-to-one>
		<bag name="LoyaltyAccountIdLoyaltyUsers" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="LoyaltyAccountId"/>
			<one-to-many class="Loyalty.Dao.Domain.LoyaltyUser, Loyalty.Dao"/>
		</bag>
		<bag name="LoyaltyAccountIdLoyaltyCards" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="LoyaltyAccountId"/>
			<one-to-many class="Loyalty.Dao.Domain.LoyaltyCard, Loyalty.Dao"/>
		</bag>
		<bag name="LoyaltyAccountIdAccountAddresses" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="LoyaltyAccountId"/>
			<one-to-many class="Loyalty.Dao.Domain.AccountAddress, Loyalty.Dao"/>
		</bag>
		<bag name="LoyaltyAccountIdCompanyLoyaltyAccounts" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="LoyaltyAccountId"/>
			<one-to-many class="Loyalty.Dao.Domain.CompanyLoyaltyAccount, Loyalty.Dao"/>
		</bag>
		<bag name="LoyaltyAccountIdLoyaltyAccountStatuses" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="LoyaltyAccountId"/>
			<one-to-many class="Loyalty.Dao.Domain.LoyaltyAccountStatus, Loyalty.Dao"/>
		</bag>
	</class>
</hibernate-mapping>



