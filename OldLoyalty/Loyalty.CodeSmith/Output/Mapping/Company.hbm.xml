<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping default-lazy="false" xmlns="urn:nhibernate-mapping-2.2">
	<class name="Loyalty.Dao.Domain.Company, Loyalty.Dao" table="tbl_Company">
		<id name="Id" type="Int32" unsaved-value="null">
			<column name="id" length="4" sql-type="int" not-null="true" unique="true" index="PK_tbl_Company"/>
			<generator class="native" />
		</id>
		<property name="RamesesHeadOfficeId" type="Int32">
			<column name="RamesesHeadOfficeId" length="4" sql-type="int" not-null="true"/>
		</property>
		<property name="RamesesCompanyId" type="Int32">
			<column name="RamesesCompanyId" length="4" sql-type="int" not-null="true"/>
		</property>
		<property name="Name" type="String">
			<column name="Name" length="50" sql-type="nvarchar" not-null="true"/>
		</property>
		<property name="RedemptionRatio" type="Int32">
			<column name="RedemptionRatio" length="4" sql-type="int" not-null="true"/>
		</property>
		<property name="CompanyKey" type="String">
			<column name="CompanyKey" length="10" sql-type="nvarchar" not-null="true"/>
		</property>
		<property name="CompanyPassword" type="String">
			<column name="CompanyPassword" length="20" sql-type="nvarchar" not-null="true"/>
		</property>
		<many-to-one name="CountryId" class="Loyalty.Dao.Domain.Country, Loyalty.Dao">
			<column name="CountryId" length="4" sql-type="int" not-null="true"/>
		</many-to-one>
		<bag name="CompanyIdCompanyLoyaltyAccounts" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="CompanyId"/>
			<one-to-many class="Loyalty.Dao.Domain.CompanyLoyaltyAccount, Loyalty.Dao"/>
		</bag>
		<bag name="CompanyIdSites" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="CompanyId"/>
			<one-to-many class="Loyalty.Dao.Domain.Site, Loyalty.Dao"/>
		</bag>
		<bag name="CompanyIdCompanyUserTitleses" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="CompanyId"/>
			<one-to-many class="Loyalty.Dao.Domain.CompanyUserTitle, Loyalty.Dao"/>
		</bag>
	</class>
</hibernate-mapping>



