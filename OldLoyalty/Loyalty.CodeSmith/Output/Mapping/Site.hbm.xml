<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping default-lazy="false" xmlns="urn:nhibernate-mapping-2.2">
	<class name="Loyalty.Dao.Domain.Site, Loyalty.Dao" table="tbl_Site">
		<id name="Id" type="Int32" unsaved-value="null">
			<column name="id" length="4" sql-type="int" not-null="true" unique="true" index="PK_tbl_Franchise"/>
			<generator class="native" />
		</id>
		<property name="RamesesSiteId" type="Int32">
			<column name="RamesesSiteId" length="4" sql-type="int" not-null="true"/>
		</property>
		<property name="Name" type="String">
			<column name="Name" length="50" sql-type="nvarchar" not-null="true"/>
		</property>
		<property name="SiteKey" type="String">
			<column name="SiteKey" length="10" sql-type="nvarchar" not-null="true"/>
		</property>
		<property name="SitePassword" type="String">
			<column name="SitePassword" length="50" sql-type="nvarchar" not-null="true"/>
		</property>
		<many-to-one name="CountryId" class="Loyalty.Dao.Domain.Country, Loyalty.Dao">
			<column name="CountryId" length="4" sql-type="int" not-null="true"/>
		</many-to-one>
		<many-to-one name="CompanyId" class="Loyalty.Dao.Domain.Company, Loyalty.Dao">
			<column name="CompanyId" length="4" sql-type="int" not-null="true"/>
		</many-to-one>
		<bag name="SiteIdTransactionHistories" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="SiteId"/>
			<one-to-many class="Loyalty.Dao.Domain.TransactionHistory, Loyalty.Dao"/>
		</bag>
		<bag name="SiteIdLoyaltyAccounts" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="SiteId"/>
			<one-to-many class="Loyalty.Dao.Domain.LoyaltyAccount, Loyalty.Dao"/>
		</bag>
	</class>
</hibernate-mapping>



