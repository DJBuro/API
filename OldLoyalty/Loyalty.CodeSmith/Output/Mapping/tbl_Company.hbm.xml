<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping default-lazy="false" xmlns="urn:nhibernate-mapping-2.2">
	<class name="Loyalty.Dao.Domain.TblCompany, Loyalty.Dao" table="tbl_Company">
		<id name="Id" type="Int32" unsaved-value="null">
			<column name="id" length="4" sql-type="int" not-null="true" unique="true" index="PK_tbl_Company"/>
			<generator class="native" />
		</id>
		<property name="Name" type="String">
			<column name="Name" length="50" sql-type="nvarchar" not-null="true"/>
		</property>
		<property name="RedemptionRatio" type="Int32">
			<column name="RedemptionRatio" length="4" sql-type="int" not-null="true"/>
		</property>
		<bag name="CompanyIdtbl_Sites" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="CompanyId"/>
			<one-to-many class="Loyalty.Dao.Domain.TblSite, Loyalty.Dao"/>
		</bag>
		<bag name="CompanyIdtbl_CompanyLoyaltyAccounts" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="CompanyId"/>
			<one-to-many class="Loyalty.Dao.Domain.TblCompanyLoyaltyAccount, Loyalty.Dao"/>
		</bag>
	</class>
</hibernate-mapping>



