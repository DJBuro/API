<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping default-lazy="false" xmlns="urn:nhibernate-mapping-2.2">
	<class name="Loyalty.Dao.Domain.TblLoyaltyCard, Loyalty.Dao" table="tbl_LoyaltyCard">
		<id name="Id" type="Int32" unsaved-value="null">
			<column name="id" length="4" sql-type="int" not-null="true" unique="true" index="PK_tbl_LoyaltyCard"/>
			<generator class="native" />
		</id>
		<property name="CardNumber" type="String">
			<column name="CardNumber" length="50" sql-type="nvarchar" not-null="true"/>
		</property>
		<property name="DateTimeCreated" type="DateTime">
			<column name="DateTimeCreated" length="4" sql-type="smalldatetime" not-null="true"/>
		</property>
		<property name="Pin" type="String">
			<column name="Pin" length="50" sql-type="nvarchar" not-null="false"/>
		</property>
		<many-to-one name="LoyaltyAccountId" class="Loyalty.Dao.Domain.TblLoyaltyAccount, Loyalty.Dao">
			<column name="LoyaltyAccountId" length="4" sql-type="int" not-null="true"/>
		</many-to-one>
		<bag name="LoyaltyCardIdtbl_RamesesAddressLoyaltyCards" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="LoyaltyCardId"/>
			<one-to-many class="Loyalty.Dao.Domain.TblRamesesAddressLoyaltyCard, Loyalty.Dao"/>
		</bag>
		<bag name="LoyaltyCardIdtbl_LoyaltyCardStatuses" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="LoyaltyCardId"/>
			<one-to-many class="Loyalty.Dao.Domain.TblLoyaltyCardStatus, Loyalty.Dao"/>
		</bag>
		<bag name="LoyaltyCardIdtbl_TransactionHistories" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="LoyaltyCardId"/>
			<one-to-many class="Loyalty.Dao.Domain.TblTransactionHistory, Loyalty.Dao"/>
		</bag>
	</class>
</hibernate-mapping>



