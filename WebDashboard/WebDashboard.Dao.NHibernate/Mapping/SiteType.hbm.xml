<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping default-lazy="false" xmlns="urn:nhibernate-mapping-2.2">
	<class name="WebDashboard.Dao.Domain.SiteType, WebDashboard.Dao" table="tbl_SiteType">
		<id name="Id" type="Int32" unsaved-value="null">
			<column name="id" length="4" sql-type="int" not-null="true" unique="true" index="PK_tbl_SiteType"/>
			<generator class="native" />
		</id>
		<property name="Name" type="String">
			<column name="Name" length="10" sql-type="nvarchar" not-null="true"/>
		</property>
		<property name="Description" type="String">
			<column name="Description" length="50" sql-type="nvarchar" not-null="true"/>
		</property>
		<bag name="SiteTypeIdSites" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="SiteTypeId"/>
			<one-to-many class="WebDashboard.Dao.Domain.Site, WebDashboard.Dao"/>
		</bag>
	</class>
</hibernate-mapping>



