<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping default-lazy="false" xmlns="urn:nhibernate-mapping-2.2">
	<class name="WebDashboard.Dao.Domain.Region, WebDashboard.Dao" table="tbl_Region">
		<id name="Id" type="Int32" unsaved-value="null">
			<column name="id" length="4" sql-type="int" not-null="true" unique="true" index="PK_Regions"/>
			<generator class="native" />
		</id>
		<property name="Name" type="String">
			<column name="RegionName" length="100" sql-type="varchar" not-null="true"/>
		</property>
    <property name="TimeZone" type="String">
      <column name="TimeZone" length="255" sql-type="nvarchar" not-null="true"/>
    </property>
		<many-to-one name="HeadOffice" class="WebDashboard.Dao.Domain.HeadOffice, WebDashboard.Dao">
			<column name="HeadOfficeID" length="4" sql-type="int" not-null="true"/>
		</many-to-one>
		<bag name="RegionalSites" inverse="true" lazy="true" cascade="all-delete-orphan" order-by="Name asc">
			<key column="RegionId"/>
			<one-to-many class="WebDashboard.Dao.Domain.Site, WebDashboard.Dao"/>
		</bag>
	</class>
</hibernate-mapping>



