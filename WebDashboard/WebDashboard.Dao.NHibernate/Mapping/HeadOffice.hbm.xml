<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping default-lazy="false" xmlns="urn:nhibernate-mapping-2.2">
	<class name="WebDashboard.Dao.Domain.HeadOffice, WebDashboard.Dao" table="tbl_HeadOffice">
		<id name="Id" type="Int32" unsaved-value="null">
			<column name="Id" length="4" sql-type="int" not-null="true" unique="true" index="PK_HeadOffice"/>
			<generator class="assigned" />
		</id>
		<property name="Name" type="String">
			<column name="Name" length="100" sql-type="varchar" not-null="true"/>
		</property>
		<property name="Message" type="String">
			<column name="Message" length="1000" sql-type="nvarchar" not-null="false"/>
		</property>
    <property name="GroupId" type="Int32">
      <column name="GroupId" length="4" sql-type="int" not-null="false"/>
    </property>
    <property name="CurrencyCode" type="String">
      <column name="CurrencyCode" length="3" sql-type="char" not-null="false"/>
    </property>
    <property name="CurrencySymbol" type="String">
      <column name="CurrencySymbol" length="10" sql-type="nvarchar" not-null="false"/>
    </property>
		<bag name="Users" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="HeadOfficeId"/>
			<one-to-many class="WebDashboard.Dao.Domain.User, WebDashboard.Dao"/>
		</bag>
		<bag name="Regions" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="HeadOfficeID"/>
			<one-to-many class="WebDashboard.Dao.Domain.Region, WebDashboard.Dao"/>
		</bag>
		<bag name="Sites" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="HeadOfficeID"/>
			<one-to-many class="WebDashboard.Dao.Domain.Site, WebDashboard.Dao"/>
		</bag>
		<bag name="Indicators" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="HeadOfficeId"/>
			<one-to-many class="WebDashboard.Dao.Domain.Indicator, WebDashboard.Dao"/>
		</bag>
	</class>
</hibernate-mapping>



