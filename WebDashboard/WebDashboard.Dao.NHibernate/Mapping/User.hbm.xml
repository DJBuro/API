<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping default-lazy="false" xmlns="urn:nhibernate-mapping-2.2">
	<class name="WebDashboard.Dao.Domain.User, WebDashboard.Dao" table="tbl_User">
		<id name="Id" type="Int32" unsaved-value="null">
			<column name="id" length="4" sql-type="int" not-null="true" unique="true" index="PK_Users"/>
			<generator class="native" />
		</id>
		<property name="EmailAddress" type="String">
			<column name="EmailAddress" length="50" sql-type="nvarchar" not-null="true" unique="true" index="IX_tbl_User"/>
		</property>
		<property name="Password" type="String">
			<column name="Password" length="50" sql-type="nvarchar" not-null="true"/>
		</property>
    <property name="StoreUser" type="Boolean">
      <column name="StoreUser" length="1" sql-type="bit" not-null="true"/>
    </property>
		<property name="IsExecutiveDashboardUser" type="Boolean">
			<column name="HeadOfficeUser" length="1" sql-type="bit" not-null="true"/>
		</property>
    <property name="IsAdministrator" type="Boolean">
      <column name="AdminUser" length="1" sql-type="bit" not-null="true"/>
    </property>
    <property name="IsExecutiveDashboardGroupUser" type="Boolean">
      <column name="GroupUser" length="1" sql-type="bit" not-null="true"/>
    </property>
		<property name="Active" type="Boolean">
			<column name="Active" length="1" sql-type="bit" not-null="true"/>
		</property>
		<many-to-one name="HeadOffice" class="WebDashboard.Dao.Domain.HeadOffice, WebDashboard.Dao">
			<column name="HeadOfficeId" length="4" sql-type="int" not-null="true"/>
		</many-to-one>
		<bag name="UserPermissions" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="UserId"/>
			<one-to-many class="WebDashboard.Dao.Domain.Permission, WebDashboard.Dao"/>
		</bag>
	</class>
</hibernate-mapping>



