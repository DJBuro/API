    <div class="task" ng-class="{
            'task-front-of-house' : employee.Department == 'Front of house',
            'task-kitchen' : employee.Department == 'Kitchen',
            'task-management' : employee.Department == 'Management',
            'task-delivery' : employee.Delivery == 'Delivery'
          }">
