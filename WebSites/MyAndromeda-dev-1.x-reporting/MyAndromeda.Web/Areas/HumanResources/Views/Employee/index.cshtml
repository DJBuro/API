<script type="text/ng-template" id="employee-edit-details.html">
    <div class="row">
        <div class="col-sm-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {{employee.ShortName}}

                    <span ng-if="employee.ShiftStatus" class="label label-success">On shift</span>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="row form-group">
                                <div class="col-sm-12">
                                    <div class="input-group">
                                        <span class="input-group-addon" style="width:40px"><i class="fa fa-child"></i></span>
                                        <input type="text" class="form-control" ng-model="employee.ShortName" id="employee.ShortName" name="employee.ShortName"
                                               placeholder="Short-Name" required data-required-msg="Employee name (first name/nickname) is required">
                                    </div>
                                    <span class="k-invalid-msg" data-for="employee.ShortName"></span>
                                </div>

                            </div>

                            <div class="row form-group">
                                <div class="col-sm-12">
                                    <div class="input-group">
                                        <span class="input-group-addon" style="width:40px"><i class="fa fa-phone"></i></span>
                                        <input type="text" class="form-control" ng-model="employee.Phone" id="employee.Phone" name="employee.Phone"
                                               placeholder="land/mobile number" required data-required-msg="Employee phone number is required">
                                    </div>
                                    <span class="col-sm-12 k-invalid-msg" data-for="employee.Phone"></span>
                                </div>

                            </div>

                            <div class="row form-group">
                                <div class="col-sm-12">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-envelope-o"></i>
                                        </span>
                                        <input type="email" class="form-control" ng-model="employee.Email" id="employee.Email" name="employee.Email"
                                               placeholder="e.g. myname@example.net" required data-required-msg="Employee email is required">
                                    </div>
                                    <span class="k-invalid-msg" data-for="employee.Email"></span>
                                </div>
                            </div>

                            <div ng-if="employee.Id"
                                 class="row form-group">
                                <div class="col-sm-12" ng-if="!status.uploading">
                                    <div style="display:flex;justify-content:center;align-items:center;height:200px">
                                        <img style="max-height:100%" class="img-rounded img-responsive" ng-src="{{profilePicture(employee)}}" />
                                    </div>
                                </div>
                            </div>

                            <div ng-if="employee.Id">
                                <div class="row form-group">
                                    <div class="col-sm-12">
                                        <input name="files"
                                               kendo-upload="profilePicUploader"
                                               type="file"
                                               k-upload="onUploading"
                                               k-success="onUploadSuccess"
                                               k-template="fileTemplate"
                                               k-async="{ saveUrl: saveRoute(), autoUpload: true }" />
                                    </div>
                                </div>
                            </div>
                            <div ng-if="!employee.Id">
                                <div class="alert alert-info">Save the record first before adding a image.</div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <div class="col-sm-9">

            <div class="panel panel-default">
                <div class="panel-heading">
                    Details
                </div>
                <div class="panel-body">
                    <div class="form-horizontal form-widgets col-sm-12">
                        <div class="form-group">
                            <label class="control-label col-sm-3">
                                Name
                            </label>
                            <div class="col-sm-8">
                                <input type="text" ng-model="employee.Name" class="k-textbox" id="employee.Name" name="employee.Name"
                                       data-required-msg="Enter a name for the employee"
                                       placeholder="Enter full employee name" required />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3" for="birthday">Birthday</label>
                            <div class="col-sm-8 col-md-6">
                                <input kendo-date-picker 
                                       ng-model="dateString"
                                       k-ng-model="employee.DateOfBirth" 
                                       id="employee.DateOfBirth" 
                                       name="employee.DateOfBirth"
                                       placeholder="Select a date of birth" />
                            </div>
                            <div class="col-sm-12">DOB: {{dateString}}</div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3" for="gender">Gender</label>
                            <div class="col-sm-8">
                                <select kendo-drop-down-list
                                        ng-model="employee.Gender"
                                         id="employee.Gender" name="employee.Gender">
                                    <option value="Male" selected>Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3" for="employee.Department">Department</label>
                            <div class="col-sm-8">
                                <select kendo-drop-down-list required
                                        data-required-msg="Select a department from the list"
                                        ng-model="employee.Department" id="employee.Department" name="employee.Department">
                                    <option value="Front of house" selected>Front of house</option>
                                    <option value="Kitchen">Kitchen</option>
                                    <option value="Management">Management</option>
                                    <option value="Delivery">Delivery</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3">Primary Role</label>
                            <div class="col-sm-8">
                                @*{{employee.PrimaryRole}}*@
                                <select kendo-combo-box ng-model="employee.PrimaryRole" id="employee.PrimaryRole" name="employee.PrimaryRole">
                                    <optgroup label="Front of house">
                                        <option value="Receptionist" selected>Receptionist</option>
                                        <option value="Order taker">Order taker</option>
                                    </optgroup>
                                    <optgroup label="Kitchen">
                                        <option value="Head Chef">Head Chef</option>
                                        <option value="Chef">Chef</option>
                                        <option value="Kitchen Porter">Kitchen Porter</option>
                                    </optgroup>
                                    <optgroup label="Management">
                                        <option value="Regional Manager">Regional Manager</option>
                                        <option value="General Manager">General Manager</option>
                                        <option value="Manager">Manager</option>
                                        <option value="Assistent Manager">Assistant Manager</option>
                                        <option value="Supervisor">Supervisor</option>
                                    </optgroup>
                                    <optgroup label="Delivery">
                                        <option value="Driver">Driver</option>
                                    </optgroup>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3">Driving License</label>
                            <div class="col-sm-8">
                                <input type="text" class="k-textbox" ng-model="employee.DrivingLicense" id="employee.DrivingLicense" name="employee.DrivingLicense" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3">Payroll Number</label>
                            <div class="col-sm-8">
                                <input type="text" class="k-textbox" ng-model="employee.PayrollNumber" id="employee.PayrollNumber" name="employee.PayrollNumber" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3">National Insurance</label>
                            <div class="col-sm-8">
                                <input type="text" class="k-textbox" ng-model="employee.NationalInsurance" id="employee.NationalInsurance" name="employee.NationalInsurance" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</script>

<script type="text/ng-template" id="rotaTaskEditor.html">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Presets
                    </div>
                    <div class="panel-body">
                        No presets (holiday, preset shift times (morning / afternoon))
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Shift
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>
                                    <input type="checkbox" ng-model="task.isAllDay" /> All day?
                                </label>
                            </div>
                        </div>
                        <div class="row" ng-if="!task.isAllDay">

                            <div class="col-sm-6">
                                <div class="label label-default">Start:</div>
                                <input kendo-date-time-picker required
                                       name="start"
                                       k-ng-model="task.start"
                                       style="width: 100%;" />
                                <span data-for="start" class="k-invalid-msg" style="display: none;"></span>
                            </div>
                            <div class="col-sm-6">
                                <div class="label label-default">End:</div>
                                <input kendo-date-time-picker required
                                       name="end"
                                       k-ng-model="task.end"
                                       style="width: 100%;" />
                                <span data-for="end" class="k-invalid-msg" style="display: none;"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="label label-default">Employee:</div>

                                <select kendo-drop-down-list
                                        ng-model="task.EmployeeId"
                                        k-data-text-field="'ShortName'"
                                        k-data-value-field="'Id'"
                                        k-data-source="dataSources.storeEmployeeDataSource"
                                        style="width: 100%;"></select>
                            </div>
                            <div class="col-sm-6">
                                <div class="label label-default">Task type:</div>

                                <select kendo-drop-down-list
                                        ng-model="task.TaskType"
                                        k-data-text-field="'text'"
                                        k-data-value-field="'value'"
                                        k-data-source="dataSources.storeTaskTypeDataSource"
                                        style="width: 100%;"></select>

                            </div>
                        </div>
                        <br />
                        <div class="row" ng-if="(task.TaskType == 'Need cover' || task.TaskType == 'Covering Shift')">

                            <div class="col-sm-6">
                                <div class="label label-default">Title:</div>

                                <input name="title" id="title" class="k-textbox" type="text" required placeholder="Title" ng-model="task.title" />
                                <div data-for="title" class="k-invalid-msg" style="display: none;"></div>
                            </div>


                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Repeat rota on different days</div>
                    <div class="panel-body">
                        <div class="label label-default">Repeat</div>
                        <div data-container-for="recurrenceRule">
                            <div data-bind="value:recurrenceRule" name="recurrenceRule" data-role="recurrenceeditor"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</script>

