                <div class="col-sm-12">
                    <h6>
                        {{extra.startTime}} - {{extra.endTime}}
                        <span ng-if="!extra.isAllDay" class="label label-success">{{extra.hours}} hr</span>
                        <span ng-if="extra.isAllDay" class="label label-success">All Day</span>
                    </h6>
                </div>
            </div>

        </div>
    </div>
