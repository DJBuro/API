@model MyAndromeda.Web.Models.Account.ResetPasswordModel
@{
    var translator = Html.GetTranslator();    
}
<div class="clearfix">
    <div id="ResetPasswordWrapper" class="sb-right content2">
        <div class="header">
            <h3>Reset Password</h3>
        </div>
        @using (Html.BeginForm())
        { 
            <fieldset>
                @Html.AntiForgeryToken()
                @Html.HiddenFor(e => e.Email)
                @Html.HiddenFor(e => e.Code)

                <div>
                    <div class="editor-label">
                        <label for="@Html.IdFor(e => e.Password)">@translator.T("New Password")</label>
                    </div>
                    <div class="editor-field">
                        <input type="password" required="required" id="@Html.IdFor(e => e.Password)" name="@Html.NameFor(e => e.Password)"  />
                    </div>
                    <div class="editor-label">
                        <label>@translator.T("Password strength")</label>

                    </div>
                    <div class="editor-field">
                        <div id="passStrength" style="width: 218px; margin-bottom: 9px"></div>
                    </div>
                    <div class="editor-field">
                        @*                        <input type="password" required="required" id="@Html.IdFor(e => e.PasswordConfirmation)" name="@Html.NameFor(e => e.Password)" />*@
                    </div>
                </div>
                <div>
                    <input type="submit" value="@translator.T("Save Password")" class="k-button" />
                </div>
            </fieldset>
        }
    </div>
</div>

