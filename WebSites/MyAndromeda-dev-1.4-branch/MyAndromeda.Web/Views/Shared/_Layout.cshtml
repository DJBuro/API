    <link href="~/Content/kendo/2015.2.703/kendo.common-bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/kendo/2015.2.703/kendo.mobile.all.min.css" rel="stylesheet" type="text/css" />
    @*<link href="~/Content/kendo/2015.2.703/styles/kendo.common.min.css" rel="stylesheet" />*@
    <link href="~/Content/kendo/2015.2.703/kendo.dataviz.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/kendo/2015.2.703/kendo.bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/kendo/2015.2.703/kendo.dataviz.bootstrap.min.css" rel="stylesheet" type="text/css" />


    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    @*<script src="~/Scripts/modernizr-2.8.3.js" />*@



    <script src="~/Scripts/kendo/2015.2.703/jquery.min.js"></script>

    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-animate.min.js"></script>
    <script src="~/Scripts/angular-sanitize.min.js"></script>

    <script src="~/Scripts/kendo/2015.2.703/jszip.min.js"></script>
    <script src="~/Scripts/kendo/2015.2.703/kendo.all.min.js"></script>
    <script src="~/Scripts/kendo/2015.2.703/kendo.aspnetmvc.min.js"></script>
    <script src="~/Scripts/kendo/2015.2.703/cultures/@(string.Format("kendo.culture.{0}.min.js", culture))"></script>

    <script src="~/Scripts/linq.js"></script>
    <script src="~/Scripts/rx.lite.js"></script>

    @* kendo angular is now in all *@

    <script src="~/Scripts/kendo/kendoExtensions.js"></script>
    <script src="~/Scripts/jquery.signalR-2.0.0.min.js"></script>
    <script src="~/signalr/hubs"></script>


    <script src="~/Scripts/MyAndromeda.App.All.js"></script>

    <script>
        kendo.culture("@culture");
    </script>
    @Html.PageScriptFiles(Area.Head)
    @Html.PageHeadScripts()
</head>
<body>
    @if (workContext.CurrentUser.Available)
    {
        @Html.Partial("_HelpSections");
    }
    <!--Header Starts-->
    <div id="header">
        <div class="container" style="margin-bottom: 0; padding-bottom: 4px">
            <div class="row">

                @Html.Partial("_Header")

                @Html.Partial("_LogOnPartial")

            </div>

            <div class="row">
                @if (workContext.CurrentUser.Available)
                {
                    <nav class="col-xs-12">
                        @Html.Action("MainMenu", "Menu", new { Area = "" })
                    </nav>
                }
            </div>
        </div>
    </div>
    <!-- end header-inner -->
    <div class="container">
        @Html.Partial("_NotificationsTemplate")
        <section id="main">
            @RenderBody()
        </section>
        <div style="clear:both"></div>
    </div>
    @Html.Partial("_Footer")
    @Html.Partial("_KendoValidator")
    @Html.PageScriptFiles(Area.Foot)
    @RenderSection("scripts", required: false)

    @Html.PageFooterScripts()

    @if (settings.DisplayDebugViews)
    {
        @StackExchange.Profiling.MiniProfiler.RenderIncludes()
    }
</body>
</html>
