    <link href="~/lib/kendo/2015.2.703/styles/kendo.dataviz.min.css" rel="stylesheet" />
    <link href="~/lib/kendo/2015.2.703/styles/kendo.dataviz.bootstrap.min.css" rel="stylesheet" />
