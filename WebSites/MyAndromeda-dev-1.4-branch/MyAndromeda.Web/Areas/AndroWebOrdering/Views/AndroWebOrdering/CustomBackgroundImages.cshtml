@{
    var workcontext = Html.GetWorkContext();
    var translator = Html.GetTranslator();
}

<div class="row">
    <div class="col-xs-12 col-md-6 form-horizontal form-widgets">
        <div class="form-group">
            <label class="control-label col-md-4 col-xs-12" for="">
                @translator.T("Desktop Background:")
            </label>
            <div class="col-md-8 col-xs-12">
                <div class="thumbnail">
                    <img ng-show="HasDesktopBackgroundImage" ng-src="{{TempDesktopBackgroundImagePath}}">
                    <div ng-hide="HasDesktopBackgroundImage">Please upload a logo.</div>
                </div>
                <input id="DesktopBackgroundUpload" name="desktopbackground" type="file" accept="image/gif,image/jpeg,image/pjpeg,image/png,image/svg+xml,image/tiff" />
                <button type="button" style="margin-top: 5px;" ng-show="HasDesktopBackgroundImage" class="k-button k-primary" ng-click="DeleteCustomBackgroundImage('desktop')">Delete</button>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4 col-xs-12">
                @translator.T("Mobile Background:")
            </label>
            <div class="col-md-8 col-xs-12">
                <div class="thumbnail">
                    <img ng-show="HasMobileBackgroundImage" ng-src="{{TempMobileBackgroundImagePath}}">
                    <div ng-hide="HasMobileBackgroundImage">Please upload a logo.</div>
                </div>
                <input type="file" name="mobilebackground" id="MobileBackgroundUpload" accept="image/gif,image/jpeg,image/pjpeg,image/png,image/svg+xml,image/tiff" />
                <button type="button" ng-show="HasMobileBackgroundImage" style="margin-top: 5px;" class="k-button k-primary" ng-click="DeleteCustomBackgroundImage('mobile')">Delete</button>
            </div>
        </div>
        <div class="col-xs-12">
            <button type="button" class="k-button k-primary" ng-click="SaveChanges()">Save</button>
        </div>

    </div>
</div>
