@model object
@{
    var workContext = Html.GetWorkContext();
    var translator = Html.GetTranslator();
}
@(Html.Kendo().DropDownList()
                          .Name("Status")
                          .OptionLabel("Select Status")
                          .BindTo(new[] {
                            new SelectListItem() { Text = translator.T("Accepted"), Value = "5" },
                            new SelectListItem() { Text = translator.T("Rejected"), Value = "6" } })
                            .SelectedIndex(1)
)
