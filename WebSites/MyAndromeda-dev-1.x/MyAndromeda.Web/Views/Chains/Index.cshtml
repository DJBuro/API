@using MyAndromeda.Authorization;
@using OrderManagementPermissions = MyAndromeda.Web.Areas.OrderManagement;
@using WebsitePermissions = MyAndromeda.Web.Areas.AndroWebOrdering;
@using HrPermissions = MyAndromeda.Web.Areas.HumanResources;
@using ReportingPermissions = MyAndromeda.Web.Areas.Reporting;
@model MyAndromeda.Web.ViewModels.ChainListViewModel

@{
    var translator = Html.GetTranslator();
    var authorizer = Html.GetAuthorizer();

    bool showChainReportButton = authorizer.Authorize(ReportingPermissions.UserReportingPermissions.ViewChainReports);
    bool showBetaReportButton = authorizer.Authorize(ReportingPermissions.UserReportingPermissions.ViewBetaReports);

}

<div id="StartApp">
    <div ui-view></div>
</div>

@using (Html.BeginScripts())
{
    if (false)
    {
        <script src="~/lib/myandromeda/MyAndromeda.App.All.js"></script>
    }
    <script type="text/template" id="chain-actions-template">
        <a class="k-button" href="/ChainReporting/{{dataItem.Id}}/Reports">
            <i class="fa fa-bar-chart-o"></i>
            @translator.T("Reports")
        </a>
    </script>
    <script type="text/template" id="chain-template">

        <chain-grid chain="dataItem">
        </chain-grid>

    </script>
    <script>
        $(function () {
            MyAndromeda.Start.setupStart("StartApp");
        });
    </script>
}

<script type="text/ng-template" id="chain-list.html">
    <!-- List chains -->
    <div class="header">
        <h3>My Chains</h3>
    </div>
    <find-store></find-store>

    <kendo-tree-list k-options="chainListOptions">

    </kendo-tree-list>
</script>

<script type="text/template" id="store-list-template">
    @*<div>
                {{dataItem.Name}}
        </div>*@
    <div class="container-fluid">

        <div class="row">
            @{
                //panel 1 permissions - admin
                var showOrders = authorizer.Authorize(OrderManagementPermissions.UserPermissions.ViewOrderManagement);
                var showWebsites = authorizer.Authorize(WebsitePermissions.UserPermissions.ViewWebsites);
                var showEmployeess = authorizer.Authorize(HrPermissions.UserPermissions.ViewHrSection);

                //panel 2 permissions - store
                var showStoreDetail = true;
                var showMenu = Html.IsAuthorizedForAny(
                    MyAndromeda.Web.Areas.Menu.UserPermissions.ViewStoreMenu,
                    MyAndromeda.Web.Areas.Menu.UserPermissions.EditStoreMenu);

                //panel 3 permissions - reporting
                //var showAcsReports = authorizer.Authorize(ReportingPermissions.UserReportingPermissions., ReportingPermissions.EnrollmentPermissions.BasicRamesesReportsFeature);

                var panel1 = showOrders || showWebsites || showEmployeess;
                var panel2 = showStoreDetail || showMenu;
                var panel3 = true;
                var cols = 0;

                if (panel1) { cols++; }
                if (panel2) { cols++; }
                if (panel3) { cols++; }

                var panelWidth = cols == 3 ? "col-sm-4" : cols == 2 ? "col-sm-6" : "col-sm-6";
            }

            @if (panel1)
            {
                <div class="@panelWidth">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            @translator.T("Admin")

                        </div>
                        <div class="panel-body">
                            <div class="btn-group">
                                @if (showOrders)
                                {
                                    <a class="btn btn-default btn-sm" href="/OrderManagement/Chain/{{chain.Id}}/{{dataItem.ExternalSiteId}}/Orders">
                                        @translator.T("Orders")
                                    </a>
                                }
                                @if (showWebsites)
                                {
                                    <a class="btn btn-default btn-sm" href="/AndroWebOrdering/Chain/{{chain.Id}}/{{dataItem.ExternalSiteId}}/AndroWebOrdering/List">
                                        @translator.T("Websites")
                                    </a>
                                }
                                @if (showEmployeess)
                                {
                                    <a class="btn btn-default btn-sm" ui-sref="hr.store-list.employee-list({ chainId : chain.Id, andromedaSiteId: dataItem.AndromedaSiteId})">
                                        @translator.T("Employees")
                                    </a>
                                }
                            </div>

                        </div>
                    </div>

                </div>
            }
            @if (panel2)
            {
                <div class="@panelWidth">
                    <div class="panel panel-warning">
                        <div class="panel-heading">
                            @translator.T("Store")
                        </div>
                        <div class="panel-body">
                            <div class="btn-group">
                                <a class="btn btn-default btn-sm" href="/Chain/{{chain.Id}}/Store/{{dataItem.ExternalSiteId}}">
                                    @translator.T("Details")
                                </a>

                                <a class="btn btn-default btn-sm" href="/Menus/Chain/{{chain.Id}}/{{dataItem.ExternalSiteId}}/MenuNavigation">
                                    @translator.T("Menu")
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @if (panel3)
            {
                <div class="@panelWidth">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <i class="fa fa-area-chart"></i>
                            @translator.T("Reporting")
                        </div>
                        <div class="panel-body">
                            <div class="btn-group">

                                <a ng-if="authorizeEnrolement(dataItem, ['ACS Reports','GPRS store'])" class="btn btn-default btn-sm" href="/Reporting/Chain/{{chain.Id}}/{{dataItem.ExternalSiteId}}/Store">
                                    @translator.T("Web")
                                </a>

                                <a ng-if="authorizeEnrolement(dataItem, ['Rameses (AMS) Reports'])" class="btn btn-default btn-sm" href="/Reporting/Chain/{{chain.Id}}/{{dataItem.ExternalSiteId}}/DailyReporting">
                                    @translator.T("Rameses")
                                </a>

                                @*<a ng-if="dataItem.HasRameses" class="btn btn-default btn-sm" href="/Reporting/Chain/{{chain.Id}}/{{dataItem.ExternalSiteId}}/DailyReporting">
                                        @translator.T("Rameses")
                                    </a>*@

                            </div>

                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</script>
<script type="text/ng-template" id="store-list.html">

    <span class="btn-group" ng-if="status.hasStores">
        <a class="btn btn-info" ng-if="!status.hideStores" ng-click="status.hideStores = true">
            {{chain.Name}} - Stores
            <span class="badge">{{chain.StoreCountLabel()}}</span>
        </a>
        <a class="btn btn-primary" ng-if="status.hideStores" ng-click="status.hideStores = false">
            {{chain.Name}} - Stores
            <span class="badge">{{chain.StoreCountLabel()}}</span>
        </a>
    </span>

    <span class="btn-group" ng-if="!status.hasStores">
        <a class="btn btn">{{chain.Name}} - stores <span class="badge">{{chain.StoreCountLabel()}}</span></a>
    </span>

    <span style="white-space:normal">
        
        <span class="btn-group pull-right" ng-if="status.hasStores">

            @if (showChainReportButton)
            {
                <a class="btn btn-info" href="/ChainReporting/{{chain.Id}}/Reports">
                    <i class="fa fa-pie-chart"></i>
                    Chain Reports
                </a>
            }
            @if (showBetaReportButton)
            {
                <a class="btn btn-default" href="/ChainReporting/{{chain.Id}}/Dashboard#/chain-sales-live">
                    <i class="fa fa-pie-chart"></i>
                    Beta Reports
                </a>
            }
        </span>

        <span class="btn-group pull-right">
            <manage-chain-users chain-id="chain.Id"></manage-chain-users>
        </span>

    </span>

    <div ng-if="status.hasStores">
        <div ng-if="!status.hideStores" style="margin-top:1em;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Stores
                </div>
                <div class="panel-body">
                    <kendo-grid k-options="storeListOptions">
                    </kendo-grid>
                </div>
            </div>
        </div>
    </div>

</script>

@Html.Partial("~/areas/HumanResources/views/employee/index.cshtml")