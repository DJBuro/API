<div class="panel panel-default" ng-controller="ThemeSettingsController">
    <div class="panel-body">
        <div class="row">
            <div class="form-horizontal form-widgets col-sm-6">
                <div class="form-group">
                    <label class="control-label col-sm-4">Website header:</label>
                    <div class="col-sm-8">
                        <label>
                            <input type="checkbox" ng-model="CustomThemeSettings.IsPageHeaderVisible" aria-label="...">
                            Show the page header
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <button ng-click="SaveChanges()" class="k-button k-primary center" type="button">Save</button>
    </div>
</div>