    <a class="k-button k-primary-button" data-id="dataItem.Id" ui-sref="hr.store-list.edit-employee({id: dataItem.Id})">
        Edit
    </a>
</script>
<script type="text/html" id="employee-list-header-template">
    <a class="k-button k-primary-button" ui-sref="hr.store-list.create-employee">Create</a>
</script>