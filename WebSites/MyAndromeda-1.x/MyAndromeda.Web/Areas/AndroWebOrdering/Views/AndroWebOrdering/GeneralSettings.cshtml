
<div style="height: 430px; width: auto;">
    <div kendo-validator="GeneralSettingsValidator">
        <div class="row">
            <div class="col-xs-12 col-md-6 form-horizontal form-widgets">
                <div class="form-group">
                    <label class="control-label col-md-4 col-xs-12">
                        Minimum Delivery Amount:
                    </label>
                    <div class="col-md-8 col-xs-12">
                        <!-- some fiddling with pence -> pound in the controller -->
                        <input kendo-numeric-text-box k-min="0" k-format="'c'" k-ng-model="MinimumDeliveryAmount" />
                    </div>
                </div>

                <!-- settings -->
                <div class="form-group">
                    <label class="control-label col-md-4 col-xs-12">Settings</label>
                    <div class="col-md-8 col-xs-12">
                        <label>
                            <input type="checkbox" 
                                ng-disabled="(true)"
                                value="true"
                                name="Model.WebsiteConfigurations.GeneralSettings.IsEnterPostCode"
                                data-bind="checked: GeneralSettings.IsEnterPostCode" />
                            Enter Postcode Lookup
                        </label>
                        <br />
                        <label>
                            <input type="checkbox" value="true"
                                name="Model.WebsiteConfigurations.GeneralSettings.EnableHomePage"
                                data-bind="checked: GeneralSettings.EnableHomePage" />
                            Enable Home Page
                        </label>
                    </div>
                </div>

                <!-- Login settings -->
                <div class="form-group">
                    

                    <label class="control-label col-md-4 col-xs-12">Login options</label>
                    
                    <div class="col-md-8 col-xs-12">
                        <label>
                            <input type="checkbox" value="true"
                                name="Model.WebsiteConfigurations.GeneralSettings.EnableAndromedaLogin"
                                data-bind="checked: CustomerAccountSettings.EnableAndromedaLogin" />
                            Enable Andromeda Login
                        </label>
                        <br />
                        <label>
                            <input type="checkbox" value="true"
                                name="Model.WebsiteConfigurations.GeneralSettings.EnableFacebookLogin"
                                ng-model="ShowFacebookAppId"
                                data-bind="checked: CustomerAccountSettings.EnableFacebookLogin" />
                            Enable Facebook Login
                        </label>
                        <div style="padding-left: 20px" ng-show="ShowFacebookAppId">
                            <label>
                                Facebook Application Id
                            <input type="text" id="GeneralSettings.FacebookApplicationId" class="k-textbox"
                                name="Model.WebsiteConfigurations.GeneralSettings.FacebookApplicationId"
                                ng-required="ShowFacebookAppId"
                                data-bind="value: CustomerAccountSettings.FacebookAccountId" />
                            </label>
                        </div>
                    </div>

                    <div class="col-xs-12" ng-hide="HasLoginOptions">
                        <div class="k-block k-error-colored well">
                            <span class="k-icon k-i-note"></span> No login options have been selected. There will be login option for the website.
                        </div>
                    </div>
                </div>
            </div>
            <div style="height: 20px"></div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <button type="button" class="k-button k-primary center" ng-click="SaveChanges()">Save</button>

                <button type="button" title="Reset 'General Settings' to their defaults" ng-click="ResetToDefault()" class="k-button">
                    Reset to defaults
                </button>
            </div>
        </div>
    </div>
