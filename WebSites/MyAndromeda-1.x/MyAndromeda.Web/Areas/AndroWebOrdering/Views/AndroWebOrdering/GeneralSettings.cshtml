    ToggleRequiredAttribute = function () {
        var checkbox = document.getElementById($("#Model_WebsiteConfigurations_GeneralSettings_EnableFacebookLogin"));
        var txtFBId = document.getElementById($("#GeneralSettings_FacebookApplicationId"));
        if (checkbox.checked) {
            txtFBId.setAttribute("required", "required");
        }
        else {
            txtFBId.removeAttribute("required");
        }
    }
</script>
