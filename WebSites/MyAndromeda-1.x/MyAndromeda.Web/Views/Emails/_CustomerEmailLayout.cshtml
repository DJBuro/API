@RenderSection("Header", true)

<!-- SG Responsive 1.1, in mobile device data will be constructed vertically.  Displaying (image) over txt-->
<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Order confirmation</title>

    <style type="text/css">
        .ReadMsgBody {
            width: 100%;
            background-color: #ffffff;
        }

        .ExternalClass {
            width: 100%;
            background-color: #ffffff;
        }

        body {
            width: 100%;
            background-color: #ffffff;
            margin: 0;
            padding: 0;
            -webkit-font-smoothing: antialiased;
            font-family: Georgia, Times, serif;
        }

        table {
            border-collapse: collapse;
        }

        @@media only screen and (max-width: 640px) {
            body .deviceWidth {
                width: 440px!important;
                padding: 0;
            }

            body .center {
                text-align: center!important;
            }
        }

        @@media only screen and (max-width: 480px) {
            body .deviceWidth {
                width: 280px!important;
                padding: 0;
            }

            body .center {
                text-align: center!important;
            }
        }
    </style>
</head>

<body leftmargin="0" topmargin="0" marginwidth="0" marginheight="0" yahoo="fix" style="font-family: Georgia, Times, serif">
    <!-- Change Background colors, and text colors as needed-->
    <!-- Wrapper -->
    <table width="100%" border="0" cellpadding="0" cellspacing="0" align="center">
        <tr>
            <td width="100%" valign="top" bgcolor="#ffffff" style="padding-top: 20px">

                <!-- One Column -->
                <table width="570" class="deviceWidth" border="0" cellpadding="0" cellspacing="0" align="center">
                    <tr>
                        <td valign="top" style="padding: 0" bgcolor="#ffffff">
                            <a href="#">
                                @RenderSection("StoreHeader", false)
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-size: 13px; border-radius: 10px; font-weight: normal; text-align: center; font-family: Georgia, Times, serif; line-height: 24px; vertical-align: top; padding: 10px 5px 5px 8px" bgcolor="#FFF8DC">
                            @RenderBody()
                        </td>
                    </tr>
                </table>
                <!-- End One Column -->
                <div style="height: 15px">&nbsp;</div>
                <!-- spacer -->

                @if (IsSectionDefined("OrderSummary"))
                { 
                    <!-- two column - Images over txt-->
                    <table width="575" border="0" cellpadding="0" cellspacing="0" align="center" class="deviceWidth" bgcolor="#FFFFFF">
                        <tr>
                            <td class="center" style="padding-top: 10px; padding-bottom: 5px">



                                <!--Column 1 - IMG 2-->
                                <table width="49%" border="0" cellpadding="0" cellspacing="0" align="left" class="deviceWidth">
                                    <tbody>
                                        <tr>
                                            <td style="font-size: 12px; color: #000000; font-weight: normal; text-align: left; font-family: Georgia, Times, serif; 
                                                line-height: 20px; vertical-align: top; padding: 0px 8px 10px 8px">
                                                <!-- The paragraph tag is important here to ensure that this table floats properly in Outlook
                                    This fix is used for all floating tables, The margin set to 0 is for Gmail -->

                                                <!--Column 1 - Order Summary -->
                                                @RenderSection("OrderDetail", false)
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                                <table width="49%" border="0" cellpadding="0" cellspacing="0" align="left" class="deviceWidth">
                                    <tbody>
                                        <tr>
                                            <td style="font-size: 12px; color: #000000; font-weight: normal; text-align: left; font-family: Georgia, Times, serif; 
                                                line-height: 20px; vertical-align: top; padding: 0px 8px 10px 8px">
                                                <!-- The paragraph tag is important here to ensure that this table floats properly in Outlook
                                    This fix is used for all floating tables, The margin set to 0 is for Gmail -->

                                                <!--Column 2 - Order Summary -->
                                                @RenderSection("OrderSummary", false)
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                            </td>
                        </tr>
                    </table>
                }

                <div style="height: 25px">&nbsp;</div>
                <!-- spacer -->

                <!-- Footer -->
                <table width="575" height="50" border="0" cellpadding="0" cellspacing="0" align="center" class="deviceWidth" bgcolor="#eeeeed">
                    <tr>
                        <td style="vertical-align: top; font-size: 12px; padding: 5px;">
                            <p style="mso-table-lspace: 0; mso-table-rspace: 0; margin: 0">
                                &copy; Copyright @DateTime.UtcNow.Year Andromeda Trading Limited. All rights reserved.
                            </p>
                        </td>
                    </tr>
                </table>
                <div style="height: 25px">&nbsp;</div>
                <!-- spacer -->

            </td>
        </tr>
    </table>
    <!-- End Wrapper -->

</body>
</html>
