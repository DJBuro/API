<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping default-lazy="false" xmlns="urn:nhibernate-mapping-2.2">
	<class name="Dashboard.Dao.Domain.Site, Dashboard.Dao" table="Sites">
		<id name="Id" type="Int32" unsaved-value="null">
			<column name="SiteID" length="4" sql-type="int" not-null="true" unique="true" index="PK_Sites"/>
			<generator class="assigned" />
		</id>
		<property name="SiteName" type="String">
			<column name="SiteName" length="100" sql-type="varchar" not-null="true"/>
		</property>
		<property name="IPAddress" type="String">
			<column name="IPAddress" length="50" sql-type="varchar" not-null="true"/>
		</property>
		<property name="Enabled" type="Boolean">
			<column name="Enabled" length="1" sql-type="bit" not-null="false"/>
		</property>
		<many-to-one name="HeadOffice" class="Dashboard.Dao.Domain.HeadOffice, Dashboard.Dao">
			<column name="HeadOfficeID" length="4" sql-type="int" not-null="true" index="IX_Sites_HOID"/>
		</many-to-one>
		<bag name="SitesRegions" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="SiteID"/>
			<one-to-many class="Dashboard.Dao.Domain.SitesRegion, Dashboard.Dao"/>
		</bag>
		<bag name="DashboardData" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="SiteID"/>
			<one-to-many class="Dashboard.Dao.Domain.DashboardData, Dashboard.Dao"/>
		</bag>
	</class>
</hibernate-mapping>



