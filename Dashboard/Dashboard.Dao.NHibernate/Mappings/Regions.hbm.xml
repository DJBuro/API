<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping default-lazy="false" xmlns="urn:nhibernate-mapping-2.2">
	<class name="Dashboard.Dao.Domain.Region, Dashboard.Dao" table="Regions">
		<id name="Id" type="Int32" unsaved-value="null">
			<column name="RegionID" length="4" sql-type="int" not-null="true" unique="true" index="PK_Regions"/>
			<generator class="native" />
		</id>
		<property name="RegionName" type="String">
			<column name="RegionName" length="100" sql-type="varchar" not-null="true"/>
		</property>
		<many-to-one name="HeadOffice" class="Dashboard.Dao.Domain.HeadOffice, Dashboard.Dao">
			<column name="HeadOfficeID" length="4" sql-type="int" not-null="true"/>
		</many-to-one>
		<bag name="SitesRegions" inverse="true" lazy="true" cascade="all-delete-orphan">
			<key column="RegionID"/>
			<one-to-many class="Dashboard.Dao.Domain.SitesRegion, Dashboard.Dao"/>
		</bag>
	</class>
</hibernate-mapping>



